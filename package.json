{
	"name": "swatplus.editor",
	"version": "2.1.0",
	"description": "SWAT+ Editor",
	"author": "Jaclyn Tech <jaclynt@tamu.edu>",
	"private": true,
	"main": "app.js",
	"build": {
		"appId": "TAMU.SWATPlusEditor",
		"artifactName": "${name}-installer-${version}.${ext}",
		"productName": "SWATPlusEditor",
		"publish": [
			{
				"provider": "generic",
				"url": "https://plus.swat.tamu.edu/downloads/editor/2/"
			}
		],
		"win": {
			"target": "nsis",
			"icon": "release/build/icons/ico/256x256.ico",
			"asar": true,
			"asarUnpack": [
				"api_dist",
				"swat_exe",
				"swatplus_vardefs.sqlite",
				"appsettings.json"
			]
		},
		"nsis": {
			"oneClick": true,
			"allowToChangeInstallationDirectory": false,
			"include": "release/installer.nsh",
			"runAfterFinish": false
		},
		"linux": {
			"target": "tar.gz",
			"asar": true,
			"asarUnpack": [
				"api_dist",
				"swat_exe",
				"swatplus_vardefs.sqlite",
				"appsettings.json"
			],
			"executableName": "SWATPlusEditor",
			"artifactName": "${name}-${version}.${ext}"
		},
		"mac": {
			"target": "dmg",
			"icon": "release/build/icons/ico/256x256.ico",
			"asar": true,
			"asarUnpack": [
				"api_dist",
				"swat_exe",
				"swatplus_vardefs.sqlite",
				"appsettings.json"
			]
		},
		"appImage": {
			"license": "license.txt",
			"artifactName": "${name}-${version}.${ext}",
			"category": "Science"
		},
		"directories": {
			"buildResources": "release/build",
			"output": "release/dist"
		},
		"files": [
			"**/*",
			"!build/*",
			"!config/*",
			"!src/*",
			"!api/*",
			"!data/*",
			"!release/*",
			"!.git/*",
			"!.vscode/*"
		]
	},
	"scripts": {
		"electron": "electron .",
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --win",
		"dist-port": "electron-builder --win portable",
		"dist-linux": "electron-builder --linux",
		"dist-mac": "electron-builder --mac"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.30",
		"@fortawesome/free-brands-svg-icons": "^5.14.0",
		"@fortawesome/free-regular-svg-icons": "^5.14.0",
		"@fortawesome/free-solid-svg-icons": "^5.14.0",
		"@fortawesome/vue-fontawesome": "^2.0.0",
		"axios": "^0.20.0",
		"bootstrap-vue": "^2.17.3",
		"core-js": "^3.6.4",
		"custom-electron-titlebar": "^3.2.4",
		"electron-args": "^0.1.0",
		"electron-is-dev": "^1.2.0",
		"electron-store": "^6.0.0",
		"electron-updater": "^4.3.5",
		"electron-window-state": "^5.0.3",
		"highcharts": "^8.1.2",
		"highcharts-vue": "^1.3.5",
		"leaflet": "^1.7.1",
		"moment": "^2.29.0",
		"portfinder": "^1.0.28",
		"underscore": "^1.11.0",
		"vue": "^2.6.12",
		"vue-bootstrap-typeahead": "^0.2.6",
		"vue-router": "^3.4.3",
		"vue2-leaflet": "^2.5.2",
		"vuedraggable": "^2.24.3",
		"vuelidate": "^0.7.5",
		"vuex": "^3.5.1"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^4.5.6",
		"@vue/cli-plugin-eslint": "^4.5.6",
		"@vue/cli-service": "^4.5.6",
		"babel-eslint": "^10.1.0",
		"bootstrap": "^4.5.2",
		"electron": "^8.5.2",
		"electron-builder": "^23.0.2",
		"eslint": "^7.9.0",
		"eslint-plugin-vue": "^6.2.2",
		"jquery": "^3.5.1",
		"node-sass": "^4.14.1",
		"popper.js": "^1.16.1",
		"sass-loader": "^10.0.2",
		"vue-devtools": "^5.1.4",
		"vue-template-compiler": "^2.6.12"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"parserOptions": {
			"parser": "babel-eslint"
		},
		"rules": {}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	]
}
